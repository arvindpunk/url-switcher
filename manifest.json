{
    "name": "Account Switcher",
    "version": "1.0",
    "description": "Quick switch Google accounts without opening new tabs!",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "utils.js",
            "conditions.js",
            "mappings.js",
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "declarativeContent"
    ],
    "page_action": {
        "default_icon": {
            "32": "icon.png"
        },
        "default_title": "Switch Account"
    }
}